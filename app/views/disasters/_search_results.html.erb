<table class="table table-striped table-hover border rounded">
  <thead>
    <tr>
      <th class="col">Name</th>
      <th class="col">Type</th>
      <th class="col">Date of Occurence</th>
      <th class="col-md-4">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% disasters.each do |disaster|%>
      <tr>
        <td><b><%= disaster.name%></b></td>
        <td><%= disaster.disaster_type %></td>
        <td><%= disaster.date_of_occurence%></td>
        <td class="row m-0 p-2">

            <div class="col-md-6">
              <%= link_to "/disasters/#{disaster.id}/edit", class: "btn btn-outline-dark form-control oswald fw-bold" do %>
                <i class="fa-regular fa-pen-to-square"></i>&nbsp;Edit
              <% end %>
            </div>
            <% if session[:user_type] == "ADMIN" || session[:user_type] == "SUPERUSER"%>
              <div class="col-md-6">
                <button  style="font-size: 20px" class="btn btn-dark bg-dgray dropdown-toggle oswald fw-bold form-control dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                  DROMIC REPORT
                </button>
                
                <ul class="dropdown-menu oswald fw p-1 text-center" style="font-size:2em">
                  <p class="">Lists</p>
                  <li class="m-1"><a href="disasters/<%=disaster.id%>/generate.xlsx", class= "dropdown-item p-1 mt-1">DOWNLOAD as .xlsx <i class="fa-solid fa-table d-inline"></i></a></li>
                  <li class="m-1"><a href="disasters/<%=disaster.id%>/view_report", class= "dropdown-item p-1 mt-1">View Report <i class="fa-solid fa-eye"></i></a></li>
                </ul>
              </div>
            <%end%>
  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
