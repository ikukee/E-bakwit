 <% if search_type == "NAME"%>
  <%= form_with url: "/sort_by/search", method: :post do |form| %>
    <%= form.hidden_field :evac_id, :value=> evac_id%>
    <%= form.hidden_field :disaster_id, :value=> disaster_id%>
    <label><strong>Search Field: </strong></label>
    <%= form.text_field :search_type, class:"form-control", oninput: "this.form.requestSubmit()"%>
  <% end %>
<% elsif search_type == "TYPE" %>
  <%= form_with url: "/sort_by/type", method: :post do |form| %>
    <%= form.hidden_field :evac_id, :value=> evac_id%>
    <%= form.hidden_field :disaster_id, :value=> disaster_id%>
    <label><strong>Relief Good Type: </strong></label>
    <%= form.select :search_type, options_for_select(["FOOD","NON-FOOD"]),{:prompt => "Select Type"},{class:"form-control", oninput: "this.form.requestSubmit()"}%>
  <% end %>
<% end %>
