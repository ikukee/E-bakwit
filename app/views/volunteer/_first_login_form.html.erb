<%= form_with url: "/change_password", method: :post do |form|%>
  <div class="form-group">
      <%= form.password_field :password, class:"form-control", placeholder: "Old Password"%>
  </div>
  <br>
  <%= form.hidden_field :user_id, class:"form-control", :value => user.id %>
  <div class="form-group">
    <%= form.password_field :password_digest, class:"form-control", placeholder: "New Password"%>
  </div>
  <br>
  <div class="form-group">
    <%= form.password_field :confirm_password, class:"form-control", placeholder: "Confirm Password"%>
  </div>
  <p id= "login_errorArea" style = "color:red;"></p>
  <span>&nbsp;</span>
  <%= form.submit "Submit", class:"btn btn-success float-right w-100 font-weight-bold" %>
</div>
<span>&nbsp;</span>
</div>
<% end %>
