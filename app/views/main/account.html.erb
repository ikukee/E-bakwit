<div class="container mt-5 oswald fw">
  <div class="card m-1">
    <div class="card-body" >
      <div class="card-deck">
        <div class="card shadow p-4 m-2" style="">
          <h1> ACCOUNT INFO </h1>
          <div class="row">
            <div class="col-md-6">
              <p style="font-size:5em"> <%= @user.full_name %> </p>
              <label>Address:</label>
              <p class="h3"><%= @user.address%></p>
              <label>Email:</label>
              <p class="h3"><%= @user.email%></p>
              <label>Contact#:</label>
              <p class="h3"><%= @user.cnum%></p>
              <label>User type:</label>
              <p class="h1"><%= @user.user_type%></p>
            </div>
            <div class="col-md-6">
              <%if @user.user_type != "ADMIN"%>
                <span class="h2">Assigned to:</span>
                <% if @user.currently_assigned != nil && @user.currently_assigned > 0 %>
                  <a style="font-size:5em" class="btn btn-primary bg-navy" href="evac_centers/<%=EvacCenter.find(@user.currently_assigned).id%>"><%= EvacCenter.find(@user.currently_assigned).name %></a>
                  <p class="h3">&nbsp; Barangay <%= EvacCenter.find(@user.currently_assigned).barangay %>, Naga City</p>
                <%else%>
                  <p class="h1">NONE</p>
                <%end%>
              <%end%>
            </div>
          </div>
        </div>
        <div class="card shadow p-4 m-2" style="">
          <h1>SETTINGS</h1>
          <div class="col">
            <button  style = "font-size:22px;"class="btn btn-primary bg-navy w-100 oswald fw-bold m-1" data-bs-toggle= "modal" data-bs-target="#display_relief_request" type="button">CHANGE PASSWORD <i class="fa-solid fa-utensils fa-xl"></i></button>
            <div id="display_relief_request" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title text-dark">CHANGE PASSWORD</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <%= render partial:"volunteer/first_login_form", locals: {user: User.find(session[:user_id])}%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
