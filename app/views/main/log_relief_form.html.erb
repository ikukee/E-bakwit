<fieldset id="evac-form" class="rounded m-5 p-5 border-opacity-75 position-relative">
  <%= form_with(model: @evac_profile, local: true, class: "row g-3") do |form| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <h4 class="oswald fw-bold">Typhoon Juan</h4>
      </div>
    </div>
    <div class="row">
      <h4 class="oswald">Log Relief Goods</h4>
    </div>
    <div class="row mb-3">
      <div class="col-md-5">
        <p class="form-label poppins">Name</p>
        <%= form.select :barangay, options_for_select(["Compost Pit", "Sealed", "Portalets - Male", "Portalets - Female", "Portalets - Common", "Bathing Cubicles - Male", "Bathing Cubicles - Female", "Bathing Cubicles - Common"  ], prompt: "Select an item"), {}, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <p class="form-label poppins">Unit</p>
        <%= form.text_field :compost_pit, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <p class="form-label poppins">Quantity</p>
        <%= form.number_field :compost_pit, class: "form-control" %>
      </div>
      <div class="col-md-2">
        <p class="form-label poppins">Name</p>
        <%= form.select :barangay, options_for_select(["Food", "Non-food"]), {}, class: "form-control" %>
      </div>
      <div class="col-md-1 position-relative">
        <%= link_to "#", class: "btn btn-primary position-absolute bottom-0 px-3" do %>
          <i class="fa-solid fa-plus"></i> Add
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover border rounded">
          <h4 class="oswald">Confirmation</h4>
          <thead>
            <tr>
              <th class="col-md-6">Item</th>
              <th class="col-md-2">Qty</th>
              <th class="col-md-4"></th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <tr class="">
              <td>Pillows</td>
              <td>28 pcs</td>
              <td class="position-relative">
                <div class="position-absolute end-0 pe-4">
                  <%=link_to "#", class: "btn btn-outline-success btn-sm" do %>
                    Confirm
                  <% end %>
                  <%= link_to"#", class: "btn btn-outline-danger btn-sm" do %>
                    <i class="fa-solid fa-x px-2"></i>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>Spoon & Fork</td>
              <td>50 pairs</td>
              <td class="position-relative">
                <div class="position-absolute end-0 pe-4">
                  <%= link_to"#", class: "btn btn-outline-success btn-sm" do %>
                    Confirm
                  <% end %>
                  <%=link_to "#", class: "btn btn-outline-danger btn-sm" do %>
                    <i class="fa-solid fa-x px-2"></i>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>Spoon & Fork</td>
              <td>50 pairs</td>
              <td class="position-relative">
                <div class="position-absolute end-0 pe-4">
                  <%= link_to"#" , class: "btn btn-outline-success btn-sm" do %>
                    Confirm
                  <% end %>
                  <%=link_to "#", class: "btn btn-outline-danger btn-sm" do %>
                    <i class="fa-solid fa-x px-2"></i>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>Spoon & Fork</td>
              <td>50 pairs</td>
              <td class="position-relative">
                <div class="position-absolute end-0 pe-4">
                  <%= link_to"#", class: "btn btn-outline-success btn-sm" do %>
                    Confirm
                  <% end %>
                  <%=link_to "#", class: "btn btn-outline-danger btn-sm" do %>
                    <i class="fa-solid fa-x px-2"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</fieldset>
