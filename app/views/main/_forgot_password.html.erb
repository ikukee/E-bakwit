<%= form_with url: "/search_account", method: :post do |form|%>
  <div class="form-group">
    <label><strong>Email Address:</strong></label>
    <%= form.email_field :email, class:"form-control", placeholder: "Input email address"%>
  </div>
  <p id= "request_error" style = "color:red;"></p>
  <span>&nbsp;</span>
  <%= form.submit "Search", class:"btn btn-success float-right w-100 font-weight-bold" %>
</div>
<span>&nbsp;</span>
</div>
<% end %>


