<button  class="btn btn-danger form-control" data-bs-toggle= "modal" data-bs-target="#delete_record" type="button">Remove <i class="fa fa-trash" aria-hidden="true"></i></button>
<div id="delete_record" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark">Are you sure you want to delete this record?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class = "row">
        <div class = "col-md-6">
          <%= link_to link, class:"btn btn-danger form-control", data: {turbo_method: :delete}  do %>
            Yes 
          <% end %>
        </div>
        <div class = "col-md-6">
          <button type="button" class="btn btn-primary form-control" data-bs-dismiss="modal" aria-label="Close">No</button>
        </div>
      </div>
    </div>
  </div>
</div>
